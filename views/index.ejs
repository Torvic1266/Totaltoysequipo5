    </video>
  </div>
  


<!--------- secion productos -->
<section id="listadoProductosHome">
  <h1 style="margin-top: 50px; text-align: center;">Ãšltimos productos</h1>
  <div class="seccionDeLosProductos" style="display: flexbox; justify-content: center;">
    
    <% for (let i = 0; i < Productos.length; i++) { %>

    <div class="producto">
      <a href="/productos/detalle-producto/<%=Productos[i].id%>">
