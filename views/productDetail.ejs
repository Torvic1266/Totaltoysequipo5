    <link rel="stylesheet" href="/css/pructodetail.css" />
  </head>
  <body>
    <%- include('./partials/header'); %>

    <main>
      
      
      <img class="juguete" src="/img/ninos/<%=product.imagen%>" />

      <div class="article">

        <h4><%=product.nombre%></h4>

        <div class="precio">
          <h4><%=product.precio%></h4>
        </div>
        <p>
          <%=product.descripcion%>
        </p>

        <div class="seccion">
          <div class="contenedor-botones">
            <button class="boton-comprar">
              <span>Agregar Al Carrito</span>
            </button>
          </div>
          <div class="contenedor-botones">
            <button class="boton-comprar"><span>Comprar</span></button>
          </div>
        </div>
        <div class="editar">
          <button class="boton-editar">
            <span>editar</span>
          </button>
        </div> 
        <div class="eliminar"></div>
        <button class="boton-eliminar">
          <span>eliminar</span>
        </button>
      </div>
     
    </main>

    <%- include('./partials/footer'); %>
  </body>
